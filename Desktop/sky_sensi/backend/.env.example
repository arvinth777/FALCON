# Backend Environment Configuration
# Copy this file to .env and fill in the actual values

# ==============================================================================
# REQUIRED CONFIGURATION
# These variables are essential for the backend to function properly
# ==============================================================================

# Google Gemini AI API Key
# Get your API key from: https://ai.google.dev/
# Required for AI-powered weather briefing analysis
GEMINI_API_KEY=your_gemini_api_key_here

# Server Configuration
# Port for the backend server (default: 3001)
PORT=3001

# Node Environment
# Set to 'development', 'production', or 'test'
NODE_ENV=development

# CORS Origins
# Comma-separated list of allowed origins (default: frontend development server)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173

# ==============================================================================
# OPTIONAL CONFIGURATION
# These variables have default values but can be customized
# ==============================================================================

# Logging Level
# Options: debug, info, warn, error (default: info)
LOG_LEVEL=info

# Cache Configuration
# TTL (Time To Live) for cached responses in minutes (default: 8)
CACHE_TTL_MINUTES=8

# Maximum cache size in number of entries (default: 500)
CACHE_MAX_ITEMS=500

# Google Gemini AI Model Configuration
# Model name (default: gemini-1.5-pro)
GEMINI_MODEL=gemini-1.5-pro

# Temperature for AI responses (0.0 to 1.0, default: 0.3)
GEMINI_TEMPERATURE=0.3

# Maximum output tokens for AI responses (default: 2048)
GEMINI_MAX_OUTPUT_TOKENS=2048

# Request timeout for Gemini API calls in milliseconds (default: 30000)
GEMINI_TIMEOUT_MS=30000

# ==============================================================================
# EXTERNAL SERVICE CONFIGURATION
# Configuration for external weather data providers
# ==============================================================================

# Aviation Weather Center (AWC) Configuration
# Base URL for AWC API (default uses official AWC endpoint)
AWC_BASE_URL=https://aviationweather.gov

# Request timeout for AWC API calls in milliseconds (default: 10000 = 10 seconds)
AWC_TIMEOUT=10000

# Open-Meteo Configuration
# Base URL for Open-Meteo API (default uses official endpoint)
OPEN_METEO_BASE_URL=https://api.open-meteo.com

# Request timeout for Open-Meteo API calls in milliseconds (default: 8000 = 8 seconds)
OPEN_METEO_TIMEOUT=8000

# ==============================================================================
# RATE LIMITING CONFIGURATION
# Control API request rates to external services
# ==============================================================================

# Maximum requests per minute for external APIs (default: 60)
RATE_LIMIT_MAX_REQUESTS=60

# Rate limiting window in milliseconds (default: 60000 = 1 minute)
RATE_LIMIT_WINDOW=60000

# ==============================================================================
# DEVELOPMENT CONFIGURATION
# Settings for development environment only
# ==============================================================================

# Enable debug mode for additional logging (default: false in production)
DEBUG_MODE=true

# Enable API request/response logging (default: false in production)
LOG_API_REQUESTS=true

# Mock external API responses for development/testing (default: false)
MOCK_EXTERNAL_APIS=false

# ==============================================================================
# MONITORING & HEALTH CHECK CONFIGURATION
# Settings for health monitoring and system diagnostics
# ==============================================================================

# Health check interval in milliseconds (default: 30000 = 30 seconds)
HEALTH_CHECK_INTERVAL=30000

# Enable performance monitoring (default: true)
ENABLE_PERFORMANCE_MONITORING=true

# Performance data retention period in milliseconds (default: 3600000 = 1 hour)
PERFORMANCE_DATA_RETENTION=3600000

# ==============================================================================
# SECURITY CONFIGURATION
# Security-related settings
# ==============================================================================

# Enable request sanitization (default: true)
ENABLE_REQUEST_SANITIZATION=true

# Maximum request size in bytes (default: 1048576 = 1MB)
MAX_REQUEST_SIZE=1048576

# Enable HTTPS redirect in production (default: false for development)
FORCE_HTTPS=false

# ==============================================================================
# EXAMPLES OF VALID CONFIGURATION
# ==============================================================================

# Example with all required variables filled:
# GEMINI_API_KEY=AIzaSyBxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# PORT=3001
# NODE_ENV=development
# CORS_ORIGINS=http://localhost:3000

# Example production configuration:
# GEMINI_API_KEY=AIzaSyBxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# PORT=3001
# NODE_ENV=production
# CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com
# LOG_LEVEL=warn
# DEBUG_MODE=false
# FORCE_HTTPS=true