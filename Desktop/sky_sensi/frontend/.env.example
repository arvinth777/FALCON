# Frontend Environment Configuration
# Copy this file to .env and fill in the actual values

# ==============================================================================
# REQUIRED CONFIGURATION
# These variables are essential for the frontend to function properly
# ==============================================================================

# Backend API Base URL
# URL where the backend server is running (default: http://localhost:3001)
VITE_API_BASE_URL=http://localhost:3001

# Application Environment
# Set to 'development', 'production', or 'staging'
VITE_ENV=development

# OpenWeatherMap API Key
# Get your API key from: https://openweathermap.org/api
# Required for weather map visualization and additional weather data
VITE_OWM_KEY=your_openweathermap_api_key_here

# ==============================================================================
# OPTIONAL CONFIGURATION
# These variables have default values but can be customized
# ==============================================================================

# Application Title
# Display name for the application (default: Sky Sensi)
VITE_APP_TITLE=Sky Sensi

# Application Version
# Version displayed in the UI (default: 1.0.0)
VITE_APP_VERSION=1.0.0

# Default Map Center Coordinates
# Latitude for default map center (default: 39.8283 - center of US)
VITE_DEFAULT_MAP_LAT=39.8283

# Longitude for default map center (default: -98.5795 - center of US)
VITE_DEFAULT_MAP_LON=-98.5795

# Default Map Zoom Level
# Initial zoom level for the map (default: 4)
VITE_DEFAULT_MAP_ZOOM=4

# ==============================================================================
# FEATURE FLAGS
# Enable or disable specific application features
# ==============================================================================

# Enable weather map feature (default: true)
VITE_ENABLE_WEATHER_MAP=true

# Enable AI-powered briefings (default: true)
VITE_ENABLE_AI_BRIEFINGS=true

# Enable flight planning features (default: true)
VITE_ENABLE_FLIGHT_PLANNING=true

# Enable TAF timeline visualization (default: true)
VITE_ENABLE_TAF_TIMELINE=true

# Enable forecast vs reality comparison (default: true)
VITE_ENABLE_FORECAST_COMPARISON=true

# Enable chat interface (default: true)
VITE_ENABLE_CHAT_INTERFACE=true

# ==============================================================================
# API CONFIGURATION
# Settings for external service integrations
# ==============================================================================

# API Request Timeout
# Timeout for API requests in milliseconds (default: 10000 = 10 seconds)
VITE_API_TIMEOUT=10000

# Enable API request caching (default: true)
VITE_ENABLE_API_CACHE=true

# API cache duration in minutes (default: 5)
VITE_API_CACHE_DURATION=5

# ==============================================================================
# UI/UX CONFIGURATION
# User interface and experience settings
# ==============================================================================

# Theme Mode
# Options: light, dark, auto (default: auto)
VITE_THEME_MODE=auto

# Enable animations (default: true)
VITE_ENABLE_ANIMATIONS=true

# Show loading skeletons (default: true)
VITE_SHOW_LOADING_SKELETONS=true

# Auto-refresh interval in seconds (default: 300 = 5 minutes)
VITE_AUTO_REFRESH_INTERVAL=300

# ==============================================================================
# DEVELOPMENT CONFIGURATION
# Settings for development environment only
# ==============================================================================

# Enable development tools (default: true in development)
VITE_ENABLE_DEV_TOOLS=true

# Show debug information in UI (default: false)
VITE_SHOW_DEBUG_INFO=false

# Mock API responses for development/testing (default: false)
VITE_MOCK_API_RESPONSES=false

# ==============================================================================
# MONITORING & ANALYTICS CONFIGURATION
# Settings for monitoring and user analytics
# ==============================================================================

# Enable performance monitoring (default: true)
VITE_ENABLE_PERFORMANCE_MONITORING=true

# ==============================================================================
# EXTERNAL SERVICE CONFIGURATION
# Configuration for external services and APIs
# ==============================================================================

# Open-Meteo API Configuration
# Base URL for Open-Meteo API (default uses official endpoint)
VITE_OPEN_METEO_BASE_URL=https://api.open-meteo.com

# OpenWeatherMap Configuration
# Base URL for OpenWeatherMap API (default uses official endpoint)
VITE_OWM_BASE_URL=https://api.openweathermap.org

# Map Tile Server Configuration
# OpenStreetMap tile server (default)
VITE_MAP_TILE_SERVER=https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png

# Map attribution text
VITE_MAP_ATTRIBUTION="Â© OpenStreetMap contributors"

# ==============================================================================
# EXAMPLES OF VALID CONFIGURATION
# ==============================================================================

# Example with all required variables filled:
# VITE_API_BASE_URL=http://localhost:3001
# VITE_ENV=development
# VITE_OWM_KEY=abcd1234567890abcd1234567890abcd

# Example production configuration:
# VITE_API_BASE_URL=https://api.your-domain.com
# VITE_ENV=production
# VITE_OWM_KEY=abcd1234567890abcd1234567890abcd