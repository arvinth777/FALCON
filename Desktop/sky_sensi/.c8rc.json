{
  "check-coverage": true,
  "reporter": ["lcov", "json", "text"],
  "reports-dir": "coverage/backend",
  "temp-directory": "./coverage/.nyc_output",
  "exclude": [
    "coverage/**",
    "test/**",
    "**/*.test.js",
    "**/*.spec.js",
    "node_modules/**",
    "**/.nyc_output/**"
  ],
  "extension": [".js"],
  "cache": false,
  "all": true,
  "clean": true,
  "thresholds": {
    "lines": 80,
    "functions": 80,
    "branches": 75,
    "statements": 80
  },
  "watermarks": {
    "lines": [75, 85],
    "functions": [75, 85], 
    "branches": [70, 80],
    "statements": [75, 85]
  },
  "include": [
    "src/**/*.js"
  ]
}